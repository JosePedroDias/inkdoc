<div class="box box-module">

    <h2><a name="{{{hash}}}">Module: {{name}}</a></h2>

    {{!<p>Defined in file: {file}</p>}}

    {{#if author}}
        <p><label>author:</label>{{author}}</p>
    {{/if}}
    {{#if since}}
        <p><label>since:</label>{{since}}</p>
    {{/if}}
    {{#if version}}
        <p><label>version:</label>{{version}}</p>
    {{/if}}

    {{#if text}}
        <p class="text">{{{text}}}</p>
    {{/if}}

    {{> examples}}

    {{!if classes.length}}
        <h3>Defined classes:</h3>
        <ul>
        {{#each classes}}
            <li><a href="#{{{hash}}}">{{name}}</a></li>
        {{/each}}
        </ul>
    {{!if}}

    {{!if functions.length}}
        <h3>Defined functions:</h3>
        <ul>
        {{#each functions}}
            <li><a href="#{{{hash}}}">{{name}}()</a></li>
        {{/each}}
        </ul>
    {{!if}}

    {{!if attributes.length}}
        <h3>Defined attributes:</h3>
        <ul>
        {{#each attributes}}
            <li><a href="#{{{hash}}}">{{name}}</a></li>
        {{/each}}
        </ul>
    {{!if}}

</div>

{{#each classes}}
    {{> class}}
{{/each}}

{{#each functions}}
    {{> function}}
{{/each}}

{{#each attributes}}
    {{> attribute}}
{{/each}}
